<%= simple_form_for @transport, :html=> { class: "dp_form" } do |f| %>
  <% if @transport.errors.any? %>
    <div id="error_explanation" class="alert-box error">
      <h2><%= pluralize(@transport.errors.count, "error") %> не позволили сохранение заявки на транспорт:</h2>

      <ul>
      <% @transport.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.input :transport_from_date, as: :string, :label => "Транспорт свободен c", input_html: { class: :datepicker } %>
    <%= f.input :transport_till_date, as: :string, :label => "Транспорт свободен по", input_html: { class: :datepicker } %>
    <%= f.input :transport_city, :label => "Город нахождения " %>
    <%= f.input :transport_to_city, :label => "Город назначения " %>
    <%= f.input :transport_type, collection: Transport::TRANSPORT_TYPES, label: 'Тип транспорта', include_blank: false %>

    <%= f.input :capacity, :label => "Грузоподъемность, т" %>
    <%= f.input :volume, :label => "Объем груза, м\u00B3" %>
    <%= f.input :payment_type, collection: Transport::PAYMENT_TYPES, label: 'Вид платежа', include_blank: false %>

    <%= f.input :payment_amount, :label => "Сумма, грн." %>
    <%= f.input :name, :label => "Ваше имя" %>
    <%= f.input :phone, as: :tel, :label => "Телефон " %>
    <%= f.input :email, as: :email, :label => "Email " %>
    <%= f.input :company_name, :label => "Компания или ФИО" %>

    <%= f.input :company_type, collection: Transport::COMPANY_TYPES, label: 'Специфика деятельности', include_blank: false %>

  <div class="actions dp_apply">
    <%= f.submit 'Отправить заявку' %>
  </div>
<% end %>
